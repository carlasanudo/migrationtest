{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "restart": true,
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Initialize Database",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/initDatabase.js",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "runtimeExecutable": "node"
        }
    ]
}

